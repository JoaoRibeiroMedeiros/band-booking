<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="add_related_partner_view" model="ir.ui.view">
      <field name="name">add.related.partner.wizard</field>
      <field name="model">add.related.partner</field>
      <field name="arch" type="xml">
        <form string="Add Related Contacts">
          <field name="partner_ids"/>
          <footer>
            <button name="button_add_selected_partners"
                    string="Select"
                    type="object" class="oe_highlight"/>
            or
            <button special="cancel" string="Cancel" class="oe_link"/>
          </footer>
        </form>
      </field>
    </record>

